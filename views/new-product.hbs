<div class="page-container">
  <h2>Offer a New Product</h2>

  <form action="/add-product" method="POST" id="form-container">
    <label class="white" for="productName">Product</label>
    <input id="productName" type="text" name="productName" placeholder="What do you want to offer?">

    <br><br>

    <label class="white" for="description">Description</label>
    <input id="description" type="text" name="description" placeholder="Describe the product in here">
    <br>
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="mainButton actButton" type="submit">Add Product</button>



  </form>
  <button class="mainButton actButton"><a href="http://localhost:3005/market">Go Back to Market</a></button>
</div>