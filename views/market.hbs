<h1>Our Market Place</h1>

<h2>Offer</h2>

<table>
  <tr>
    <th>Product </th>
    <th>Description</th>
    <th>Author</th>
  </tr>
  {{#if products}}
  {{#each products}}
  {{#if isOffer}}
  <tr>
    <td>{{productName}}</td>
    <td>{{description}}</td>
    <td>{{author.username}}</td>
    <td><a href="/new-product/delete/{{_id}}">Delete Product</a></td>
  </tr>
  {{/if}}
  {{/each}}
  {{/if}}
</table>



<button><a href="/new-product">New Offer</a></button>

